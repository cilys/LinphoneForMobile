<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">

    <TextView
        android:id="@+id/tv_show_number"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/x60"
        android:layout_marginTop="@dimen/y100" />

    <LinearLayout
        android:id="@+id/ll_number_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y962"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:id="@+id/service_center_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y20"
            android:paddingBottom="@dimen/y20"
            android:paddingLeft="@dimen/y50"
            android:paddingRight="@dimen/y50"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/y54"
            android:background="@drawable/shape_round_bg_call_number_service_button" >

            <ImageView
                android:layout_width="@dimen/y24"
                android:layout_height="@dimen/y24"
                android:src="@mipmap/icon_service_menu_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SERVICE"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/y2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y92"
            android:layout_marginTop="@dimen/y40"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_number_1"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_number_2"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_number_3"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="3" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y92"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_number_4"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="4" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_number_5"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_number_6"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="6" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y92"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_number_7"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="7" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_number_8"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_number_9"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="9" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y92"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_number_star"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="*" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_number_0"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_number_shape"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="#" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y92"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_number_add"
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                style="@style/style_call_number_ll" >

                <TextView
                    style="@style/style_call_number_ll_tv_number"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_call"
                    android:layout_width="@dimen/x120"
                    android:layout_height="@dimen/y120"
                    android:src="@mipmap/icon_call_accept"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/y30"
                    android:src="@mipmap/icon_delete_white"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>