<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_call_number_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="style_call_number_ll_tv_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y66</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x50</item>
    </style>
    <style name="style_call_number_ll_tv_char">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y26</item>
        <item name="android:textColor">@color/color_gray_text_color</item>
        <item name="android:textSize">@dimen/x20</item>
    </style>
    <style name="style_call_number_action_ll" parent="style_call_number_ll">
        <item name="android:background">@drawable/shape_round_bg_white</item>
    </style>
    <style name="style_call_number_action_ll_img">
        <item name="android:layout_width">@dimen/y24</item>
        <item name="android:layout_height">@dimen/y24</item>
    </style>
    <style name="style_call_number_action_ll_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#19192A</item>
        <item name="android:textSize">@dimen/x15</item>
        <item name="android:layout_marginTop">@dimen/y8</item>
    </style>

    <style name="style_splite_line_h_light_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/x30</item>
        <item name="android:layout_marginRight">@dimen/x30</item>
        <item name="android:background">@color/color_split_line_light_gray</item>
    </style>

    <style name="style_call_action_parent">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/y100</item>
        <item name="android:padding">@dimen/y22</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/selector_call_action_bg_parent</item>
    </style>

    <style name="style_call_action_img">
        <item name="android:layout_width">@dimen/y24</item>
        <item name="android:layout_height">@dimen/y24</item>
    </style>

    <style name="style_call_action_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x22</item>
        <item name="android:textColor">@drawable/selector_call_action_text_color</item>
    </style>

    <style name="style_launcher" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

</resources>
